.flash-box
  .Wrapper
    .Chat-side
      .Side-header
        .Side-header__box
          %p.Side-header__box__user-name
            = current_user.name
          %ul.Side-header__box__menu
            %li.Side-header__box__menu__new-group
              = link_to new_group_path do
                = fa_icon 'edit', class: 'icon'
            %li.Side-header__box__menu__edit-user
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
      .Groups
        .Group
          - current_user.groups.each do |group|
            = link_to group_messages_path(group) do
              .group__name
                = group.name
              .group__message
                メッセージはまだありません。
    .Chat-main
      .Main-header
        .Main-header__left-box
          %h2.Main-header__left-box__current-group{:deta_group_id => ""}
          
          %ul.Main-header__left-box__member-list
            
            %li.Main-header__left-box__member-list__member
              
              
              
        %a{:herf => ""}
          .Main-header__edit-btn
            
      .Messages
        .Message{:data_message_id => ""}
        .Message__upper-info
          .Message__upper-info__talker
            
          .Message__upper-info__date
            
        .Message__text
          
      .Form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
        %form.New_message{:method => "post", :accept_charset => "UTF-8", :action => "", :enctype => "multipart/form-data", :id => "new_message"}
          %input{:value => "", :type => "hidden", :name => "utf-8"}
          %input{:value => "", :name => "authenticity_token", :type => "hidden"}
          .Input-box
            %input.Input-box__text{:id => "message_content", :name => "message[content]", :type => "text", :placeholder => "type a message"}
            %label.Input-box__image{:for => "message_image"}
              .Fa-image
                = fa_icon "photo" 
              %input.Input-box__image__file{:id => "message_image", :name => "message[image]", :type => "file"}
          %input.Submit-btn{:data_disable_with => "Send", :value => "Send", :name => "commit", :type => "submit"}